{
  "dashboard": {
    "id": null,
    "title": "Factum Logger Dashboard",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "type": "graph",
        "title": "Errors Over Time",
        "targets": [
          {
            "expr": "count_over_time({level=\"error\"}[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "type": "table",
        "title": "Recent Errors",
        "targets": [
          {
            "expr": "{level=\"error\"} | json | line_format \"{{.message}}\"",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "type": "stat",
        "title": "Top Services",
        "targets": [
          {
            "expr": "topk(5, count_over_time({level=\"error\"}[1h]) by (service))",
            "refId": "C"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 9
        }
      },
      {
        "type": "stat",
        "title": "Top Components",
        "targets": [
          {
            "expr": "topk(5, count_over_time({level=\"error\"}[1h]) by (component))",
            "refId": "D"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 9
        }
      },
      {
        "type": "logs",
        "title": "Search by msg_id",
        "targets": [
          {
            "expr": "{msg_id=~\".+\"}",
            "refId": "E"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 15
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "datasource": "Loki",
          "query": "label_values(service)",
          "refresh": 1
        },
        {
          "name": "component",
          "type": "query",
          "datasource": "Loki",
          "query": "label_values(component)",
          "refresh": 1
        },
        {
          "name": "level",
          "type": "query",
          "datasource": "Loki",
          "query": "label_values(level)",
          "refresh": 1
        }
      ]
    }
  },
  "overwrite": true
}